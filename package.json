{
	"name": "dry-ramen",
	"description": "Offline-first scalable battle-tested React app template. Just add water.",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"exports": {
		".": "./dist/main.js"
	},
	"scripts": {
		"setup": "corepack enable && corepack prepare pnpm@latest --activate && pnpm i",
		"add:shadcn-ui": "pnpm dlx shadcn-ui@latest add",
		"typecheck": "tsc --noEmit",
		"generate:pwa": "pwa-assets-generator",
		"generate": "pnpm generate:pwa",
		"dev": "concurrently 'pnpm generate' 'vite'",
		"build": "pnpm generate && NODE_OPTIONS=--max-old-space-size=8192 vite build",
		"preview": "vite preview",
		"postinstall": "pnpm generate"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.3.4",
		"@julr/vite-plugin-validate-env": "^1.1.1",
		"@tanstack/react-query": "^5.29.2",
		"@tanstack/react-router": "^1.28.1",
		"@tanstack/router-devtools": "^1.28.1",
		"@unocss/reset": "^0.59.3",
		"clsx": "^2.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-helmet": "^6.1.0",
		"react-hook-form": "^7.51.3",
		"react-icons": "^5.1.0",
		"react-wrap-balancer": "^1.1.0",
		"usehooks-ts": "^3.1.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.0",
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/client-preset": "^4.2.5",
